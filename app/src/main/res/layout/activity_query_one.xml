<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/query"
        android:layout_width="@dimen/query_text_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/q1"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/query"
        android:padding="@dimen/twenty_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/five_dp"
            android:text="first option"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen_sp" />

        <ImageView
            android:id="@+id/option_r1"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_gravity="center|right"
            android:src="@drawable/radio_unselect" />

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/L1"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/L2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:padding="@dimen/twenty_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/five_dp"
            android:text="second option"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen_sp" />

        <ImageView
            android:id="@+id/option_r2"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_gravity="center|right"
            android:src="@drawable/radio_unselect" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/L2"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/L3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L2"
        android:padding="@dimen/twenty_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/five_dp"
            android:text="third option"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen_sp" />

        <ImageView
            android:id="@+id/option_r3"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_gravity="center|right"
            android:src="@drawable/radio_unselect" />

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/L3"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/L4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L3"
        android:padding="@dimen/twenty_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/five_dp"
            android:text="fourth option"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_sp" />

        <ImageView
            android:id="@+id/option_r4"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_gravity="center|right"
            android:backgroundTint="@color/white"
            android:src="@drawable/radio_unselect" />

    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/L4"
        android:background="@color/view" />

</RelativeLayout>






