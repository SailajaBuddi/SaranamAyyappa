<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ec7063">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/close"
        android:layout_marginTop="@dimen/fifteen_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/response_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/test_completed"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/response_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="CONGRATULATIONS"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/response_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="You have successfully\nTwenty 20 World Cup 2016\nChallenge"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="@dimen/eighteen_sp"
            android:background="@drawable/rectangular_whitebckgrnd"
            android:textColor="@color/cfcTextOrangeColor"
            android:text="Try Again"
            android:textAllCaps="false"/>

        <ImageView
            android:id="@+id/response_coins"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ten_dp"
            android:src="@drawable/dollor"/>

        <TextView
            android:id="@+id/response_coins_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:text="YOU WON"/>

        <TextView
            android:id="@+id/response_coins_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:text="100 FANCOINS"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
