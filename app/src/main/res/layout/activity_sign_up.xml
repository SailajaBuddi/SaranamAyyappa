        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:background="@drawable/colored_border"/>

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:text=""
                android:inputType="textCapWords"
                android:textSize="70sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:background="@drawable/textcolored_border"
                android:visibility="invisible"/>

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:indeterminate="false"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/style_circular_fill"
                android:visibility="gone"/>


        </RelativeLayout>

        <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_FirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:colorControlActivated="@color/black"
                android:textColor="@color/black"
                android:textColorHint="@color/cfcTextLightColor"
                android:textCursorDrawable="@drawable/color_cursor"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gmail (Optional)"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:colorControlActivated="@color/black"
                android:textColor="@color/black"
                android:textColorHint="@color/cfcTextLightColor"
                android:textCursorDrawable="@drawable/color_cursor"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_mobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile number"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:inputType="number"
                android:layout_margin="10dp"
                android:colorControlActivated="@color/black"
                android:textColor="@color/black"
                android:textColorHint="@color/cfcTextLightColor"
                android:textCursorDrawable="@drawable/color_cursor"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_nobordercolor"
        android:src="@drawable/check1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By continuing you agree to the"
        android:gravity="center"
        android:paddingTop="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="terms of use"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and"
            android:paddingLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textStyle="bold"
            android:paddingLeft="5dp"/>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>


