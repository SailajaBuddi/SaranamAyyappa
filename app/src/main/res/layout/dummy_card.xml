<?xml version="1.0" encoding="utf-8"?>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:id="@+id/event_cv"
            android:layout_marginLeft="@dimen/five_dp"
            app:cardCornerRadius="2dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="157dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/event_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img2"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="vertical"
                    android:layout_marginTop="95dp"
                    android:gravity="bottom"
                    android:background="@drawable/gradient">

                    <TextView
                        android:id="@+id/tv_PujaName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:text="Ayyapa Swamy Maha Padi Puja"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2sp">

                        <TextView
                            android:id="@+id/tv_Addres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:ellipsize="end"
                            android:text="AyyapaSwamyTemple,SrinagarColongy,Panjagutta"
                            android:textSize="@dimen/fourteen_sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:id="@+id/tv_Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21-11-2017"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen_sp"
                            android:layout_marginRight="@dimen/five_dp"/>

                        <TextView
                            android:id="@+id/tv_PujaStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.00PM"
                            android:textColor="@color/white"
                            android:layout_marginRight="@dimen/ten_dp"
                            android:textSize="@dimen/fourteen_sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" to "
                            android:textColor="@color/white"
                            android:textSize="@dimen/twelve_dp"/>
                        <TextView
                            android:id="@+id/tv_toDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21-11-2017"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen_sp"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:layout_marginRight="@dimen/ten_dp"/>

                        <TextView
                            android:id="@+id/tv_PujaEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9.30PM"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen_sp"/>



                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>
        </android.support.v7.widget.CardView>