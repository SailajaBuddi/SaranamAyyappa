<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/query"
        android:layout_width="@dimen/query_text_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/q4"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/query"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:columnCount="2"
        android:id="@+id/grid"
        android:rowCount="2">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/option_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:background="@drawable/rectangular_colorborder"
                android:backgroundTint="@color/contentPackImageBorder"
                android:padding="2dp"
                android:src="@drawable/flowers_pic" />

            <ImageView
                android:id="@+id/one_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/check"
                android:visibility="invisible" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/option_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:background="@drawable/rectangularborder"
                android:backgroundTint="@color/contentPackImageBorder"
                android:padding="2dp"
                android:src="@drawable/temple_ayyapa" />

            <ImageView
                android:id="@+id/two_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/check"
                android:visibility="invisible" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/option_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:background="@drawable/rectangularborder"
                android:backgroundTint="@color/contentPackImageBorder"
                android:padding="@dimen/two_dp"
                android:src="@drawable/flowerdec_ayyappa" />

            <ImageView
                android:id="@+id/three_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/check"
                android:visibility="invisible" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/option_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:background="@drawable/rectangularborder"
                android:backgroundTint="@color/contentPackImageBorder"
                android:padding="@dimen/two_dp"
                android:src="@drawable/temple_pic" />

            <ImageView
                android:id="@+id/four_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/check"
                android:visibility="invisible" />

        </FrameLayout>

    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@+id/grid"

        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:text="Submit"
            android:id="@+id/submit"


            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>