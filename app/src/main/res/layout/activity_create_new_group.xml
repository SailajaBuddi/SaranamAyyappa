        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/twelve_dp"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/tv_Addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:hint="Address"
                android:textColor="@color/cfcTextColor"
                android:textSize="@dimen/sixteen_sp" />

            <ImageView
                android:id="@+id/iv_Add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dropdown" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/coinpagedivder2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Invite Members"
                android:textColor="@color/grey_darker"
                android:textSize="@dimen/sixteen_sp" />

            <TextView
                android:id="@+id/tv_Invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Invite"
                android:textColor="@color/cfcTextOrangeColor"
                android:textSize="@dimen/sixteen_sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/txt_selected_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/coinpagedivder2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/tv_InviteAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Invite People As a Admin(Optional)"
                android:textColor="@color/grey_darker"
                android:textSize="@dimen/sixteen_sp" />

            <TextView
                android:id="@+id/tv_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Admin"
                android:textColor="@color/cfcTextOrangeColor"
                android:textSize="@dimen/sixteen_sp" />

        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_createGroup"
            android:layout_width="74dp"
            android:layout_height="66dp"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:src="@drawable/send"
            android:layout_gravity="center"
            app:backgroundTint="@color/white"
            android:scaleType="center"
            android:layout_marginTop="10dp"
            android:tint="@color/black" />

    </LinearLayout>
    </ScrollView>

</LinearLayout>